<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_remove_smart_stamp_pressed_solid"/>
            <stroke
                android:width="2dp"
                android:color="@color/button_remove_smart_stamp_pressed"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/button_remove_smart_stamp_focused_solid"/>
            <stroke
                android:width="2dp"
                android:color="@color/button_remove_smart_stamp_focused"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/button_remove_smart_stamp_solid"/>
            <stroke
                android:width="2dp"
                android:color="@color/button_remove_smart_stamp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>