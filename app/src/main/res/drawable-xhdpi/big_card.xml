<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:left="10dp"
        android:right="10dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/card_shadow"/>
        </shape>
    </item>
    <item
        android:id="@+id/card_white"
        android:bottom="8dp"
        android:left="10dp"
        android:right="10dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/list_item_background"/>
        </shape>
    </item>


</layer-list>